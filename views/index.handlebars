<h1>Eat-Da-Burger!</h1>

<div class="container">
   <div class="row">
        <div class="col-md-6 col-left">
          {{#each burgers}}
          {{#unless this.devoured}}
            <div>
              <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
              </form>
            </div>
          {{/unless}}
        {{/each}}  
        </div>

        <div class="col-md-6 col-right">
          {{#each burgers}}
          {{#if this.devoured}}
            <div class='burgerEaten'>
              <div>
                {{this.burger_name}}
              </div>
            </div>
          {{/if}}
        {{/each}}        
        </div>          
    </div>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="3" cols="40" placeholder="Enter a burger you want to eat"></textarea>
        </div>
        <button type="submit">Submit</button>
        <p>Click the "submit" button</p>
    </form>  
</div>