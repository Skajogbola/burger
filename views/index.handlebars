<h1>Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <!-- Undevoured burgers -->
        <div class="col-md-6 col-left">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button class="eat" data-id="{{this.id}}" data-newDevoured="{{devour}}">
                        {{#if devour}}EAT TIME!{{else}}DEVOUR IT!{{/if}}
                    </button>
                    <hr>
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 col-right">
            <!-- Devoured burgers -->
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                <button class="delete" data-id="{{this-id}}" data-newDevoured="{{devour}}">
                    {{#if delete}}DELETE!!!{{else}}DELETE!{{/if}}
                </button>
                <hr>
                {{/if}}
                {{/each}}
        </div>
    </div>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="3" cols="40"
                placeholder="Enter a burger you want to eat"></textarea>
        </div>
        <button type="submit">Submit</button>
        <p>Click the "submit" button</p>
    </form>
</div>