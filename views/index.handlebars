<h1>Eat-Da-Burger!</h1>

<div class="container">
    <div class="row">
        <!-- Undevoured burgers -->
        <div class="col-md-6 col-left">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <div>
                    <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                    <button class="change-sleep" data-id="{{id}}" data-newsleep="{{sleep}}">
                        {{#if sleep}}SLEEP TIME!{{else}}DEVOUR IT!{{/if}}
                    </button>
                    {{!-- <button type="button" class="eatburger btn btn-warning" id ="eatbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-cutlery"></span></button> --}}
                    <hr>

                    {{!-- <form action="/burgers/{{this.id}}?_method=PUT" method="POST">
                        <button type="submit" class='burgerAvailable'> {{this.burger_name}}</button>
                    </form> --}}
                </div>
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        <div class="col-md-6 col-right">
            <!-- Devoured burgers -->
                {{#each burgers}}
                {{#if devoured}}
                <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                <button class="delete" data-id="{{this-id}}" data-newsleep="{{delete}}">
                    {{#if delete}}DELETE!!!{{else}}DELETE!{{/if}}
                </button>
                {{!-- <span><strong> {{this.id}} - {{this.burger_name}} </strong></span>
                                <button type="button" class="trashburger btn btn-danger" id ="trashbutton" data-id="{{this.id}}" data-newDevoured="{{devour}}"><span class="fa fa-trash"></span></button> --}}
                <hr>
                {{!-- <div class='burgerEaten'>
                    <div>
                        {{this.burger_name}}
                    </div>
                </div> --}}
                {{/if}}
                {{/each}}
        </div>
    </div>

    <form class="create-form">
        <div class="form-group">
            <label for="name"></label>
            <textarea id="name" name="burger-name" rows="3" cols="40"
                placeholder="Enter a burger you want to eat"></textarea>
        </div>
        <button type="submit">Submit</button>
        <p>Click the "submit" button</p>
    </form>
</div>